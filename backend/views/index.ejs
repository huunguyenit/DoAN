    <script type='text/javascript'>
    console.log('aaaaaaaaaaaaaaaaa')
        $.ajax({
            url: 'http://localhost:5555/auth/secured',
            dataType: 'json',
            timeout: 10000,
            headers: {
                'token': localStorage.access_token
            }
        }).done((data) => {
            if(!data){
                window.location = 'http://localhost:5555/login';
            }
        }).fail(function(xhr, status, error) {
        // error handling
        window.location = 'http://localhost:5555/login';
        
    });
    </script>
